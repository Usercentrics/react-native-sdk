# Resolve react_native_pods.rb with Node to allow hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.1'

use_frameworks! :linkage => :static

target 'sample' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,
    :fabric_enabled => false,
    :new_arch_enabled => false
  )

  # Development: Use local SDK
  pod 'react-native-usercentrics', :path => '../..'
  # Testing (optional): Use GitHub version
  # pod 'react-native-usercentrics', :git => 'https://github.com/Usercentrics/usercentrics-react-native.git', :tag => 'v2.22.2'

  # ✅ Test target: inherit search paths only, not full settings
  target 'sampleTests' do
    inherit! :search_paths
  end

  # ✅ Post-install hook (safe for CircleCI and macOS 13+)
  post_install do |installer|
    react_native_post_install(
      installer,
      :mac_catalyst_enabled => false
    )

    installer.pods_project.targets.each do |target|
      next if target.name.to_s.include?('Tests')

      target.build_configurations.each do |config|
        settings = config.build_settings
        next unless settings

        settings['CLANG_CXX_LANGUAGE_STANDARD'] = '$(inherited) c++20'
        settings['CLANG_CXX_LIBRARY'] = '$(inherited) libc++'
        settings['OTHER_CPLUSPLUSFLAGS'] = '$(inherited) -std=c++20 -stdlib=libc++'
      end
    end
  end
end
